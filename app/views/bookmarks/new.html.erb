
<div id="new-bookmark-page" class="container">
  <div class="d-flex title-btn justify-content-between my-4">
    <h1>Add a movie to your list</h1>
    <%= link_to "Back", list_path(@list), class: "btn btn-secondary" %>
  </div>
  <div class="d-grid">
    <% @movies.each do |movie| %>
      <% unless @list.movies.include?(movie) %>
          <div class="card">
          <img src="<%= movie.poster_url %>" alt="">
          <div class="d-flex justify-content-between p-3">
          <h3><%= movie.title %></h3>
          <p><%= movie.rating %>/10</p>
          </div>
          <%= simple_form_for([@list, @bookmark]) do |f| %>
            <%= f.hidden_field :movie_id, value: movie.id %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
